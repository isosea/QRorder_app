<% if order.quantity != 0 %>
<li class="list-group-item" id=<%= "item#{order.id}" %>>
  <div>
    <% if order.checked %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= order.menu.name %>
    テーブル<%= order.tables_id %>から
    <%= order.quantity %>個の注文
  </div>

  <% if order.checked %>
  <%= button_to "未対応に戻す", checked_path(id: order.id), class: "order_btn", method: :patch %>
  <% else %>
  <%= button_to "対応完了", checked_path(id: order.id), class: "order_btn", method: :patch %>
  <% end %>
</li>
<% end %>